@model Cts.Domain.ValueObjects.Address?
@if (Model is null)
{
    <span class="text-muted">[Not entered]</span>
}
else
{
    @if (!string.IsNullOrWhiteSpace(Model.Street))
    {
        @Model.Street<br />
    }
    @if (!string.IsNullOrWhiteSpace(Model.Street2))
    {
        @Model.Street2<br />
    }
    @if (!string.IsNullOrWhiteSpace(Model.City))
    {
        @if (string.IsNullOrWhiteSpace(Model.State) && string.IsNullOrWhiteSpace(Model.PostalCode))
        {
            @Model.City
        }
        else
        {
            @Model.City@:,
        }
    }
    @if (!string.IsNullOrWhiteSpace(Model.State))
    {
        @Model.State@:
    }
    @if (!string.IsNullOrWhiteSpace(Model.PostalCode))
    {
        @Model.PostalCode
    }
}
