@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
}

<h1>@ViewData["Title"]</h1>

<div class="usa-grid-full">
    <form asp-controller="Account" asp-action="ChangePassword" method="post" class="usa-width-one-half">
        <label asp-for="OldPassword"></label>
        <input asp-for="OldPassword" />
        <span asp-validation-for="OldPassword" class="usa-input-error-message"></span>

        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" />
        <span asp-validation-for="NewPassword" class="usa-input-error-message"></span>

        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword" class="usa-input-error-message"></span>

        <div class="gaepd-buttonrow">
            <button type="submit">Save new password</button>
            <a asp-action="Index" class="usa-button usa-button-outline">Cancel</a>
        </div>
    </form>
    <div class="usa-width-one-half">
        @await Html.PartialAsync("_PasswordRequirementsPartial")
    </div>
</div>

@section PageScripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
