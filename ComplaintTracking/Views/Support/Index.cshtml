@section PageStyles {
    <style>
        .usa-content ul:not(.usa-accordion):not(.usa-accordion-bordered) { max-width: none; }
        .gaepd-list-custom { list-style: none; margin-left: 0; padding-left: .5em; }
        .gaepd-list-custom li { padding-left: 1.44em; text-indent: -1.44em; }
        .gaepd-list-custom li:before { padding-right: .44em; }
        .gaepd-list-rocket li:before { content: "🚀"; }
